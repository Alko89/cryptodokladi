{% extends 'layout.jinja2' %}
{% from 'components.jinja2' import user_tokens with context %}

{% block content %}
<!-- A single blog post -->
<section class="post">
    <header class="post-header">
        <h2 class="post-title">
            {{ user.name }}
        </h2>
    </header>

    <div class="post-description">
        <div class="post-images pure-g">
            <div class="pure-u-1">
                {{ user_tokens(tokens) }}
            </div>
        </div>
    </div>

    <div class="post-description">
        <form action="{{ add_fund }}" method="post">
            <div class="pure-control-group">
                <select class="pure-input-1-2" name="token" placeholder="Token">
                    {% for t in token %}
                    <option value="{{ t.token }}">{{ t.name }}</option>
                    {% endfor %}
                </select>
                <input class="pure-input-1-2" type="text" name="value" placeholder="Vrednost" />
            </div>
            <div class="pure-control-group">
                <input class="pure-input-1-2" type="text" name="comment" placeholder="Komentar" />
                <button type="submit" name="form.submitted" value="Add" class="pure-button">Dodaj</button>
            </div>
        </form>
    </div>
</section>
{% endblock content %}
