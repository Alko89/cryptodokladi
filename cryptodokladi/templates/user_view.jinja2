{% extends 'layout.jinja2' %}

{% block content %}
<!-- A single blog post -->
<section class="post">
    <header class="post-header">
        <h2 class="post-title">
            {{ user.name }}
        </h2>
    </header>

    <div class="post-description">
        <div class="post-images pure-g">
            <div class="pure-u-1">
                <table class="pure-table pure-table-horizontal">
                    <thead>
                        <tr>
                            <th>Koin</th>
                            <th>Vrednost</th>
                            <th>Tečaj</th>
                            <th>Vrednost v EUR</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for fund in tokens %}
                        <tr>
                            <td>
                                {{ fund.token }}
                            </td>
                            <td class="{{ fund.token }}" id="{{ fund.token }}">
                                {{ "%.8f"|format(fund.value) }}
                            </td>
                            {% if fund.token == "BTC" %}
                            <td id="btceur"></td>
                            {% elif fund.token == "ETH" %}
                            <td id="etheur"></td>
                            {% else %}
                            <td></td>
                            {% endif %}
                            <td class="{{ fund.token }}" ID="{{ fund.token }}EUR">
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% if transactions_btc.count() != 0 %}
    <header class="post-header">
        <p class="post-meta">
            Bitcoin transakcije
        </p>
    </header>
    <div class="post-description">
        <div class="post-images pure-g">
            <div class="pure-u-1">
            <table class="pure-table pure-table-bordered">
                {% for fund in transactions_btc %}
                <tr>
                    <td>
                        {{ fund.token }}
                    </td>
                    <td class="{{ fund.token }}">
                        {{ "%.8f"|format(fund.value) }}
                    </td>
                    <td>
                        {{ fund.sender.name }}
                    </td>
                    <td>
                        {{ fund.comment }}
                    </td>
                    <td class="timestamp">
                        {{ fund.timestamp }}
                    </td>
                </tr>
                {% endfor %}
            </table>
            </div>
        </div>
    </div>
    {% endif %}


