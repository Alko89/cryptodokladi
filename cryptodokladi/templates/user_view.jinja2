    <div class="post-description">
        <div class="pure-g">
            {% if request.user.role == "editor" %}
            <div class="pure-u-1-2">
                <p class"post-meta">
                    <a class="pure-button" href="{{ add_funds }}">
                        Dodaj Koine
                    </a>
                </p>
            </div>
            {% endif %}

            <div class="pure-u-1-2">
                <p class"post-meta">
                    <a class="pure-button" href="{{ send_funds }}">
                        Pošlji Koine
                    </a>
                </p>
            </div>
        </div>
    </div>
</section>
