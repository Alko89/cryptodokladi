{% extends 'layout.jinja2' %}

{% block content %}
<!-- A single blog post -->
<section class="post">
    <header class="post-header">
        <h2 class="post-title">
            {{ user.name }}
        </h2>
    </header>

    <div class="post-description">
        <div class="post-images pure-g">
            <div class="pure-u-1 pure-u-md-1-2">
                <table class="pure-table pure-table-horizontal">
                    <thead>
                        <tr>
                            <th>Koin</th>
                            <th>Vrednost</th>
                            <th>Vrednost v EUR</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for fund in tokens %}
                        <tr>
                            <td>
                                {{ fund.token }}
                            </td>
                            <td class="{{ fund.token }}" id="{{ fund.token }}">
                                {{ fund.value }}
                            </td>
                            <td class="{{ fund.token }}" ID="{{ fund.token }}EUR">
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="pure-u-1 pure-u-md-1-2">
                <table class="pure-table pure-table-horizontal">
                    <thead>
                        <tr>
                            <th>Kraken</th>
                            <th>BTCEUR</th>
                            <th>ETHEUR</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <th>#</th>
                            <th id="btceur"></th>
                            <th id="etheur"></th>
                        </tr>
                </table>
            </div>
        </div>
    </div>

    <header class="post-header">
        <p class="post-meta">
            Zgodovina transakcij
        </p>
    </header>
    <div class="post-description">
        <div class="post-images pure-g">
            <div class="pure-u-1">
            <table class="pure-table pure-table-bordered">
                {% for fund in user.user_funds %}
                <tr>
                    <td>
                        {{ fund.token }}
                    </td>
                    <td class="{{ fund.token }}">
                        {{ fund.value }}
                    </td>
                    <td>
                        {{ fund.timestamp }}
                    </td>
                </tr>
                {% endfor %}
            </table>
            </div>
            <div class="pure-u-1">
                {% if request.user.role == "editor" %}
                <p class"post-meta">
                    <a href="{{ add_funds }}">
                        Add transaction
                    </a>
                </p>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock content %}
