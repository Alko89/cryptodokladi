{% extends 'layout.jinja2' %}

{% block subtitle %}{{page.subtitle}} - {% endblock subtitle %}

{% block content %}
<h1 class="content-subhead">{{page.subtitle}}</h1>

<!-- A single blog post -->
<section class="post">
    <header class="post-header">
        <h2 class="post-title">{{page.title}}</h2>
    </header>

    <div class="post-description">
        {{ page.data|safe }}
    </div>

    {% if request.user.role == "editor" or request.user.id == page.creator_id %}
    <div class="form-group">
        <a class="pure-button" href="{{ edit_url }}">Uredi Stran</a>
    </div>
    {% endif %}
</section>
{% endblock content %}
